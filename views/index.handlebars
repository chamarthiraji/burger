
<div class="list">
	<div class="box" id="list1">
		<ul  >
			
			  {{#each burgers}}
			    {{#unless this.devoured}}
			     

			        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
			           <li>
			      	{{this.id}}.
			        {{this.burger_name}}
			        </li>
			          <input type="hidden" name="devoured" value="true">
			          <button type="submit">Devoure It!</button>
			        </form>
			      </li>
			    {{/unless}}
			  {{/each}}
		</ul>
	</div>
	<div class="box">
	<form class="inputForm"  action="/create" method="POST">	
		<input type="text" name="burgerName" value="" id ="burgerName"><br><br>
		<button type="submit">Submit </button>
	</form>	
	<h3>Add a Burger</h3>
	</div>
	<div class="box" id="list2">
		<ul >
			{{#each burgers}}
	    		{{#if this.devoured}}
	     
	      			{{this.id}}.
	      			{{this.burger_name}}
	  
	            {{/if}}
	        {{/each}}

		</ul>
	</div>
	</div>			